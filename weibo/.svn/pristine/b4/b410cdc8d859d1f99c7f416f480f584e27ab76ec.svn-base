<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 配置Admins -->
	<bean id="admins" class="www.csdn.project.domain.Admins" scope="singleton" lazy-init="default"/>
	
	<!-- 配置Pictures -->
	<bean id="pictures" class="www.csdn.project.domain.Pictures" scope="singleton" lazy-init="default"/>
	
	<!-- 配置Messages -->
	<bean id="messages" class="www.csdn.project.domain.Messages" scope="singleton" lazy-init="default"/>
</beans>